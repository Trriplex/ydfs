
install -d $PREFIX/bin

[ -e inxi.1 ] && cp inxi $PREFIX/bin # && exit 0

# postgresql
[ -e src/bin/pg_config/pg_config.c ] && unset MAKELEVEL # && unset MAKEFLAGS && unset MFLAGS

# odoo
[ -e odoo/cli/server.py ] && install -d $PREFIX/lib/odoo && cp -fR * $PREFIX/lib/odoo && exit 0

# dolibarr
pwd |grep dolibarr && [ -e htdocs ] && install -d $PREFIX/lib/ && cp -fR htdocs $PREFIX/lib/dolibarr

#nodejs
[ -e bin/node ] && cp -fR * $PREFIX && exit 0
